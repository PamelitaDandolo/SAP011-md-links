{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true // reconhecer como palavras do jest padrão describe, it...
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "import/extensions": "off", // desabilitar uma regra padrão do airbnb, caso o caminho do arquivo .js
    "no-cond-assign": "off"
  }
}
